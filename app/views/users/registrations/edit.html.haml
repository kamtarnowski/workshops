%h2.text-center
  Edit #{resource_name.to_s.humanize}
%br

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  .row
    .col-lg-4.col-lg-offset-1.col-md-4.col-md-offset-1.col-xs-8.col-xs-offset-2
      .form-inputs
        = f.input :email, required: true, as: :string
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :firstname, required: false
        = f.input :lastname, required: false
        = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
        = f.input :password_confirmation, required: false
        = f.input :current_password, hint: "we need your current password to confirm your changes", required: true

    .col-lg-5.col-lg-offset-1.col-md-6.col-md-offset-1.col-xs-10.col-xs-offset-1
      %div.avatars_pics
        %h5
          %strong
            Choose Avatar (optional)
        = f.collection_radio_buttons :avatar, [["angelina.jpg", image_tag('avatars/angelina.jpg', width: '100px', height: '100px')] ,['dicaprio.jpg', image_tag('avatars/dicaprio.jpg', width: '100px', height: '100px')],['eva.jpg', image_tag('avatars/eva.jpg', width: '100px', height: '100px')],['justin.jpg', image_tag('avatars/justin.jpg', width: '100px', height: '100px')],['monica.jpg', image_tag('avatars/monica.jpg', width: '100px', height: '100px')],['obama.jpg', image_tag('avatars/obama.jpg', width: '100px', height: '100px')],['penelope.jpg', image_tag('avatars/penelope.jpg', width: '100px', height: '100px')],['peter.jpg', image_tag('avatars/peter.jpg', width: '100px', height: '100px')],['anonim.png', image_tag('avatars/none.jpg', width: '100px', height: '100px')]], :first, :last
        %h5.text-right{'style' => 'margin-right: 40px'}
          = link_to 'Take random', random_avatar_path, remote: true, class: 'btn btn-info'

  .row
    .col-md-4.col-md-offset-2.col-xs-8.col-xs-offset-2{'style' => 'margin-top: 20px'}
      .form-actions
        = f.button :submit, "Update Account now"
      %br
      %h4
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
      or
      \&nbsp;
      = link_to "Back", :back, class: 'btn btn-primary'
